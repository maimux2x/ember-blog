<h2>New Post</h2>
<form {{on "submit" this.createPost}}>
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <Input @value={{this.title}} id="title" class="form-control" />
  </div>
  <div class="mb-3">
    <label for="body" class="form-label">Body</label>
    <Textarea @value={{this.body}} id="body" class="form-control" />
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="mt-3">
  <LinkTo @route="admin.posts">Back</LinkTo>
</div>
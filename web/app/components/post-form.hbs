<form {{on "submit" @onSubmit}}>
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <Input @value={{@post.title}} id="title" class="form-control {{if @post.errors.title "is-invalid"}}" />
    {{#each @post.errors.title as |error|}}
      <div class="error invalid-feedback">
        {{error}}
      </div>
    {{/each}}
  </div>
  <div class="mb-3">
    <label for="body" class="form-label">Body</label>
    <Textarea @value={{@post.body}} id="body" class="form-control {{if @post.errors.body "is-invalid"}}" />
    {{#each @post.errors.body as |error|}}
      <div class="error invalid-feedback">
        {{error}}
      </div>
    {{/each}}
  </div>

  <button type="submit" class="btn btn-primary me-2">{{@submitLabel}}</button>
  <input type="file" id="file" name="file" multiple {{on "change" this.uploadImage}} />
</form>
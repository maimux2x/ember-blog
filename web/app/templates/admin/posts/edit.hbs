<h2>Edit Post</h2>
<form {{on "submit" this.updatePost}}>
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <Input @value={{@model.title}} id="title" class="form-control" />
  </div>
  <div class="mb-3">
    <label for="body" class="form-label">Body</label>
    <Textarea @value={{@model.body}} id="body" class="form-control" />
  </div>

  <button type="submit" class="btn btn-primary">Update</button>
</form>

<div class="mt-3">
  <LinkTo @route="admin.posts">Back</LinkTo>
</div>

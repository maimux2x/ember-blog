<h2>Edit Post</h2>

<PostForm @onSubmit={{this.updatePost}} @post={{@model}} @submitLabel="Update" />

<hr />

<div class="mt-3">
  <button type="button" class="btn btn-danger" {{on "click" this.deletePost}}>Delete</button>
</div>

<div class="mt-3">
  <LinkTo @route="admin.posts">Back</LinkTo>
</div>
<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">
      {{#if @link}}
        <LinkTo @route="posts.show" @model={{@post.id}}>{{@post.title}}</LinkTo>
      {{else}}
        {{@post.title}}
      {{/if}}
    </h5>
    <div class="body card-text">
      {{@post.body}}
      {{#if @post.images}}
        {{#each @post.images as |image|}}
          <img src={{image.image_url}} alt="">
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>